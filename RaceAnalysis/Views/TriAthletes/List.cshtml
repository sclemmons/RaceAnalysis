
@model RaceAnalysis.Models.BaseViewModel
@{
    Layout = "~/Views/Layouts/_AnalysisLayout.cshtml";
    PageData["Title"] = "Athletes List";
    PageData["Instructions"] = "Select one or more races to view athletes.";


}



<!-- import the included stylesheet for some (very basic) default styling -->
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />


@section filter{
  
        @if (Model.Triathletes.Any())
        {
            @Html.ActionLink("Filter by Duration", "ShowFilterByDuration", null,
                        new
                        {
                            races = @String.Join(",", Model.Filter.SelectedRaceIds.Select(x => x.ToString()).ToArray()),
                            agegroups = @String.Join(",", Model.Filter.SelectedAgeGroupIds.Select(x => x.ToString()).ToArray()),
                            genders = @String.Join(",", Model.Filter.SelectedGenderIds.Select(x => x.ToString()).ToArray())
                        },
                        new { @class = "modal-link btn btn-duration", title = "Filter by Time" })
        }
}

@section results{
    @if (Model.Triathletes != null)
    {
     
          @Html.Partial("~/Views/Shared/_PagedList.cshtml",Model);
    }
}