
@model RaceAnalysis.Models.BaseViewModel
@{
    Layout = "~/Views/Layouts/_AnalysisLayout.cshtml";
    ViewBag.Title = "Athletes List";
    PageData["Instructions"] = "To compare athletes, select the rows and then select the compare button";
    ViewBag.Action = "action-athletes";
}



<!-- import the included stylesheet for some (very basic) default styling -->
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

@section scripts
{
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
}

@section filter{
  
    }

@section page_actions{
    @if (Model.Triathletes.Any())
    {
        <script type="text/javascript">  $("#page-actions").show(); </script>
        @Html.Partial("~/Views/Shared/_ActionBar.cshtml", Model)
    }<!--actions-->
}<!--section-->

@section results{
    @if (Model.Triathletes.Any())
    {
        <script type="text/javascript">  $("#results").show(); </script>
          @Html.Partial("_TriathletesList",Model)
    }
}