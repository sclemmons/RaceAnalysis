@model RaceAnalysis.Models.TriathletesViewModel
@{
    Layout = "~/Views/Layouts/_AnalysisLayout.cshtml";
    PageData["Title"] = "Search";
    PageData["Instructions"] = "Search for an athlete";

}



<!-- import the included stylesheet for some (very basic) default styling -->
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />


@section filter{
    @Html.Partial("~/Views/Shared/_HorizRaceFilter.cshtml", Model.Filter)
}
@section results{
    @Html.Partial("~/Views/Shared/_Search.cshtml", Model)

    @if (Model.Triathletes != null)
    {
        <script type="text/javascript">  $("#results").show(); </script>
        @Html.Partial("~/Views/Shared/_PagedList.cshtml", Model)

    }


 }
