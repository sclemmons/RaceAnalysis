@model IEnumerable<RaceAnalysis.Models.Race>

@{
    ViewBag.Title = "Races";
}

<h2>Races</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

      
        <th>
            @Html.DisplayNameFor(model => model.RaceId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongDisplayName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.RaceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th>
           Conditions
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidateMessage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RaceId)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LongDisplayName)
        </td>

         <td>
            @item.RaceDate.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.ActionLink("Conditions...", "Edit", "RaceConditions", new { id = item.RaceId },null )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValidateMessage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RaceId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RaceId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RaceId }) |
            @Html.ActionLink("Trigger Fill", "CacheFill",new {id = item.RaceId}) |
            @Html.ActionLink("Verify", "Verify", new { id = item.RaceId })
      
         </td>
    </tr>
}

</table>
