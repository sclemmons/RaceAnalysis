@model RaceAnalysis.Models.TriStatsViewModel
@{
    Layout = "~/Views/Layouts/_AnalysisLayout.cshtml";
    ViewBag.Title = "Compare Races";
    PageData["Instructions"] = "This view compares the stats of races side-by-side.";
    ViewBag.Action = "action-compareraces";
}
@section scripts{
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
}
@section filter{}


@section page_actions{
    @if (Model.Stats.Count > 0)
    {
        <script type="text/javascript">  $("#page-actions").show(); </script>
        @Html.Partial("~/Views/Shared/_ActionBar.cshtml", Model)
    }<!--actions-->
}<!--section-->


@section results{
    @if (Model.Stats.Count > 0)
    {
        <script type="text/javascript">  $("#results").show(); </script>
        @Html.Partial("~/Views/Shared/_RaceComparisonChart.cshtml", Model)
        @Html.Partial("~/Views/Shared/_DNFPerRacePieChart.cshtml", Model)
    }
}




