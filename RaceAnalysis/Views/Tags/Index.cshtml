@model IEnumerable<RaceAnalysis.Models.Tag>
@using RaceAnalysis.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}

<h2>Index - Tag List</h2>

<div>
    @Html.ActionLink("Edit All", "EditAll")
</div>
<p>
    @Html.ActionLink("Create New Tag", "Create")


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

@{ var previousType = TagType.RunOther;}
@foreach (var item in Model) {
    <tr>
        <td>

            @if (item.Type != @previousType)
            {
                @Html.DisplayFor(modelItem => item.Type)
                previousType = item.Type;
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TagId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TagId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TagId })
        </td>
    </tr>
}

</table>
