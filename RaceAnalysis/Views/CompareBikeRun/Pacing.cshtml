@model RaceAnalysis.Models.BaseViewModel
@{
    Layout = "~/Views/Layouts/_AnalysisLayout.cshtml";
    ViewBag.Title = "Bike and Run Correlation";
    PageData["Instructions"] = "This view displays aggregated results that correlates the athletes' bike and run splits";
    ViewBag.Action = "action-comparebikerunpacing";
}

@section scripts{
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
}
@section filter{}


@section page_actions{
    @if (Model.Triathletes.Any())
    {
        <script type="text/javascript">  $("#page-actions").show(); </script>
        @Html.Partial("~/Views/Shared/_ActionBar.cshtml", Model)
    }<!--actions-->
}<!--section-->

@section results{
    @if (Model.Triathletes.Any())
    {
        <script type="text/javascript">  $("#results").show(); </script>
        @Html.Partial("~/Views/Shared/_BikeRunScatterChart.cshtml", Model)
        <hr/>
        @Html.Partial("~/Views/Shared/_BikeRunPacePieChart.cshtml", Model)
    }
}
