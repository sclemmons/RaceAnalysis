@model RaceAnalysis.Models.AgeGroupCompareViewModel
@{
    Layout = "~/Views/Layouts/_AnalysisLayout.cshtml";
    PageData["Title"] = "Age Group Comparison";
    PageData["Instructions"] = "Select a single race and multiple age groups to compare.";
}

@section filter{}


@section page_actions{
    @if (Model.Stats.Count > 0)
    {
        <script type="text/javascript">  $("#page-actions").show(); </script>
        @Html.Partial("~/Views/Shared/_ActionBar.cshtml", Model)
    }<!--actions-->
}<!--section-->

@section results{
    @if (Model.Stats.Count > 0)
    {
        <script type="text/javascript">  $("#results").show(); </script>
        @Html.Partial("~/Views/Shared/_StatsAgeGroupsChart.cshtml", Model)

    }
}

