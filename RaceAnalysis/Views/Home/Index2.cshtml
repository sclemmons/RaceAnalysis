@model RaceAnalysis.Models.HomePageViewModel

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Layouts/_HomePageLayout.cshtml";

}

<!-- bxSlider Javascript file -->
<script src="~/Scripts/jquery.bxslider.js"></script>
<!-- bxSlider CSS file -->
<link href="~/Content/jquery.bxslider.css" rel="stylesheet" />


<div class= "home-header" >
    <h2>Research. Analyze. Geek Out.</h2>
    <p class="lead"></p>
    <p class="lead">If you came here looking for Tri <em>Tats</em>, we can't design one for you, 
     but we may be able to help you earn your next one. </p>
    <div class="home-about">
      
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <ul class="bxslider">
            <li><img src="~/Content/images/shutterstock2.jpg" title="my caption here" /></li>
            <li><img src="~/Content/images/tristats-share.jpg" title="my caption here" /></li>
            <li><img src="~/Content/images/shutterstock_448957918.jpg" title="my caption here" /></li>

        </ul>
        </div>
</div>

<div class="row">

    <div class="col-sm-4">
        <div class="feature-callout">
            <h3>Most Recent Races</h3>
            @Html.Partial("_MostRecentRaces", Model)
        </div>
    </div>

        <div class="col-sm-4">
            <div class="feature-callout">
                <h3>Fastest Finishes</h3>
                @Html.Partial("_FastestRacesFinish", Model)
            </div>
        </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <div class="feature-callout">
            <h3>Fastest Swims</h3>
            @Html.Partial("_FastestRacesSwim", Model)
        </div>
    </div>

    <div class="col-sm-4">
        <div class="feature-callout">
            <h3>Fastest Bikes</h3>
            =                @Html.Partial("_FastestRacesBike", Model)
        </div>
    </div>

    <div class="col-sm-4">
        <div class="feature-callout">
            <h3>Fastest Runs</h3>
                @Html.Partial("_FastestRacesRun", Model)
        </div>
    </div>
</div>



    </div>
</div> <!--row-->
   
  

<script type="text/javascript">

    $(document).ready(function () {
       
        $('.bxslider').bxSlider(
            {
                adaptiveHeight: false,
                auto:true,
                captions: true
            }

        );
    });
</script>
