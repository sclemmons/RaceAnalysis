@model RaceAnalysis.Models.HomePageViewModel
    

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<div>
    <div class="homepage-table-container">
        <div class="charts-title"><span>Most Recent Races</span></div>
        <div id='mostrecent-div' class="homepage-table"></div>
        <div class="clearFloat"></div>
    </div>


    <script type="text/javascript">

        google.charts.load('current', { 'packages': ['table'] });


        google.charts.setOnLoadCallback(drawMostRecent);
  


        function drawMostRecent() {
            var data = new google.visualization.DataTable(
                                             @Html.Raw(Json.Encode(Model.DataTableMostRecent)));
            var options = {
                width: '100%',
                height: '300px'
            }
           var table = new google.visualization.Table(document.getElementById('mostrecent-div'));
           table.draw(data,options);
        }
    </script>
</div>


