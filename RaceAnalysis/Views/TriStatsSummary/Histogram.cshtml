@model RaceAnalysis.Models.HistogramViewModel
@{
    Layout = "~/Views/Layouts/_AnalysisLayout.cshtml";
    ViewBag.Title  = "Summary";
    PageData["Instructions"] = "This view displays an aggregated summary of the all the races selected";
    ViewBag.Action = "action-summary";
}


@section filter{}


@section page_actions{
    @if (Model.Triathletes.Any())
    {
        <script type="text/javascript">  $("#page-actions").show(); </script>
        @Html.Partial("~/Views/Shared/_ActionBar.cshtml", Model)
    }<!--actions-->
}<!--section-->


@section results{
    @if (Model.Triathletes.Any())
    {
        <script type="text/javascript">  $("#results").show(); </script>
        @Html.Partial("~/Views/Shared/_HistogramChart.cshtml", Model)
        
    }
}




