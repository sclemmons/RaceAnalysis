@using RaceAnalysis.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TriStats - @ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/themes/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
    @Scripts.Render("~/bundles/select")

  
    

    @RenderSection("scripts", required: false)


    <style>
        .modal-content {
            width: 600px !important;
            margin: 30px auto !important;
        }
    </style>
    
</head>
<body class="@ViewBag.BodyClass">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

               @Html.ActionLink(".  text-indent: -9999px; /* hides the link text */", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
              
             
               
            
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">

                    <li class='@Html.IsActive("Home", "Index")'>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class='@Html.IsActive("Races", "Index")'>
                        @Html.ActionLink("Analyze", "Index", "Races")
                    </li>
                    <li class='@Html.IsActive("Hypotheticals", "Index")'>
                        @Html.ActionLink("How would I do?", "Index", "Hypotheticals")
                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Search<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class='@Html.IsActive("Races", "Search")'>
                                @Html.ActionLink("Races", "Search", "Races")
                            </li>
                            <li class='@Html.IsActive("TriAthletes", "Search")'>
                                @Html.ActionLink("Athletes", "Search", "TriAthletes")
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class='@Html.IsActive("AppFeatures", "Index")'>
                                @Html.ActionLink("Features", "Index", "AppFeatures")
                            </li>
                            <li class='@Html.IsActive("Contact", "Index")'>
                                @Html.ActionLink("Contact", "Index", "Contact")
                            </li>
                        </ul>
                     </li>
               </ul>


</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TriStats by Tritone Software</p>

            @Html.Partial("_LoginPartial")
        </footer>
    </div>
    <script>

  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-92282514-1', 'auto');
  ga('send', 'pageview');

    </script>
 
</body>
</html>
